rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leitura e escrita para a coleção de músicas
    match /musicas/{document} {
      allow read, write: if true;
    }
    
    // Regra padrão para outros documentos
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
